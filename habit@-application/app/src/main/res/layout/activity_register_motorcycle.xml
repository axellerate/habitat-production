<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".registration.RegisterMotorcycle"
    android:background="@drawable/pattern1">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:id="@+id/imageView"
        android:background="@drawable/habitat_logo"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:id="@+id/linearLayout"
        android:weightSum="1"
        android:layout_below="@+id/imageView">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Select Your Motorcycle Engine Size"
            android:id="@+id/textView"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <RadioGroup
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">


        <RadioButton
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:text="0 - 450cc"
            android:id="@+id/motorcycle0"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="#747474"/>

        <RadioButton
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:text="451 - 599cc"
            android:id="@+id/motorcycle400"
            android:layout_gravity="center_horizontal"
            android:background="#747474"
            android:layout_marginTop="2dp"/>

        <RadioButton
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:text="600 - 999cc"
            android:id="@+id/motorcycle600"
            android:layout_gravity="center_horizontal"
            android:background="#747474"
            android:layout_marginTop="2dp"/>

        <RadioButton
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:text="1000cc+"
            android:id="@+id/motorcycle1000"
            android:layout_gravity="center_horizontal"
            android:background="#747474"
            android:layout_marginTop="2dp"/>
            
        </RadioGroup>

        <Button
            android:id="@+id/sign_in"
            android:text="Next Step"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:background="@drawable/greenbutton"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:onClick="onClickNextRegisterMotorcycle"/>

    </LinearLayout>

</RelativeLayout>
